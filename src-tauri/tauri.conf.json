{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cheese-schedule",
  "version": "0.2.1",
  "identifier": "com.wanzii.cheese.schedule",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "cheese-schedule",
        "title": "奶酪课程表",
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "skipTaskbar": true,
        "minimizable": false,
        "maximizable": false,
        "closable": false,
        "resizable": false,
        "width": 170,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "silent": true,
        "type": "embedBootstrapper"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "minimumWebview2Version": "111.0.1661.43"
      }
    }
  }
}